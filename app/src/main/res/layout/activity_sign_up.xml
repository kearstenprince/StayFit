<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".signup.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_arrow_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:id="@+id/tvSignUp"
            android:paddingTop="15dp"

            android:layout_below="@id/btnBack"
            android:textSize="30sp"
            android:textColor="@color/yelloColor"
            android:textStyle="bold"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_to_create_your_account"
            android:id="@+id/tvCreateAccount"
            android:layout_below="@id/tvSignUp"
            android:textColor="@color/white"
            android:textStyle="bold"


            />


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        app:cardCornerRadius="100dp"
        android:backgroundTint="@color/greyColor"
        android:layout_gravity="center"
        android:layout_height="110dp">

        <ImageView
            android:layout_width="wrap_content"
           android:src="@drawable/ic_user_icon"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>





    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvFirstName"
        android:layout_width="match_parent"
         app:boxStrokeWidth="0dp"
        app:boxCornerRadiusBottomStart="100dp"
        app:boxCornerRadiusTopStart="100dp"
        app:boxCornerRadiusTopEnd="100dp"
        app:boxCornerRadiusBottomEnd="100dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:hint="Enter First name"
        app:hintAnimationEnabled="true"
        android:clipChildren="false"
        android:textColorHint="@color/white_light"
        app:startIconDrawable="@drawable/ic_baseline_contact_mail_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:inputType="text"
            android:gravity="center_vertical"
            android:backgroundTint="@color/greyColor"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvLastName"
        android:layout_width="match_parent"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusBottomStart="100dp"
        app:boxCornerRadiusTopStart="100dp"
        app:boxCornerRadiusTopEnd="100dp"
        app:boxCornerRadiusBottomEnd="100dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:foregroundGravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        app:prefixTextColor="@color/black"
        android:hint="Enter Last name"
        app:hintAnimationEnabled="true"
        android:clipChildren="false"
        android:textColorHint="@color/white_light"
        app:startIconDrawable="@drawable/ic_baseline_contact_mail_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:inputType="text"
            android:gravity="center_vertical"
            android:backgroundTint="@color/greyColor"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusBottomStart="100dp"
        app:boxCornerRadiusTopStart="100dp"
        app:boxCornerRadiusTopEnd="100dp"
        app:boxCornerRadiusBottomEnd="100dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:foregroundGravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        app:prefixTextColor="@color/black"
        android:hint="Enter Email"
        app:hintAnimationEnabled="true"
        android:clipChildren="false"
        android:textColorHint="@color/white_light"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:backgroundTint="@color/greyColor"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:boxStrokeWidth="0dp"
        app:passwordToggleDrawable="@drawable/custom_eye"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusBottomStart="100dp"
        app:boxCornerRadiusTopStart="100dp"
        app:boxCornerRadiusTopEnd="100dp"
        app:boxCornerRadiusBottomEnd="100dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:foregroundGravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        app:prefixTextColor="@color/black"
        android:hint="Enter Password"
        app:hintAnimationEnabled="true"
        android:clipChildren="false"
        android:textColorHint="@color/white_light"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:maxLength="20"
            android:gravity="center_vertical"
            android:backgroundTint="@color/greyColor"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menu"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusBottomStart="100dp"
            app:boxCornerRadiusTopStart="100dp"
            app:boxCornerRadiusTopEnd="100dp"
            app:boxCornerRadiusBottomEnd="100dp"
            android:layout_weight="1"
            app:boxStrokeWidthFocused="0dp"
            android:layout_marginHorizontal="10dp"
            android:foregroundGravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:hint="Height">

            <AutoCompleteTextView
                android:id="@+id/menuHeight"
                android:layout_width="match_parent"
                android:backgroundTint="@color/greyColor"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/white"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/menu"
            android:layout_weight="1"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusBottomStart="100dp"
            app:boxCornerRadiusTopStart="100dp"
            app:boxCornerRadiusTopEnd="100dp"
            app:boxCornerRadiusBottomEnd="100dp"
            app:boxStrokeWidthFocused="0dp"
            android:layout_marginHorizontal="10dp"
            android:foregroundGravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:hint="AGE">

            <AutoCompleteTextView
                android:id="@+id/menuAge"
                android:layout_width="match_parent"
                android:backgroundTint="@color/greyColor"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/white"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/btnSignUp"
        android:layout_marginHorizontal="10dp"
        app:cornerRadius="100dp"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="15dp"

        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textColor="@color/white_light"
            android:padding="10dp"
            android:id="@+id/tvLogin"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"

            />

    </LinearLayout>




</ScrollView>