<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    app:cardCornerRadius="12dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="12dp"
        android:id="@+id/cvExercise"
        android:backgroundTint="@color/yelloColor"
        app:cardBackgroundColor="@color/yelloColor"
        android:layout_height="wrap_content">





    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            app:cardCornerRadius="12dp"
            android:id="@+id/cv_img"
            android:backgroundTint="#464646"
            android:layout_height="90dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:id="@+id/ivExercise"
                android:src="@drawable/img_mc"
                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Mountain_climber"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cv_img"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tvExerciseTitle"
            android:textColor="@color/black"

            />



        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStarted"
            android:backgroundTint="@color/greyColor"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="START"
            android:textStyle="bold|italic"
            android:layout_marginHorizontal="7dp"

            />


    </RelativeLayout>

    </androidx.cardview.widget.CardView>

<View
    android:layout_width="match_parent"
    android:layout_below="@id/cvExercise"
    android:layout_marginTop="10dp"
    android:layout_height="5dp"/>

</RelativeLayout>